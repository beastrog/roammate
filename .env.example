# Application Settings
VITE_APP_NAME=Roammate
VITE_APP_DESCRIPTION=Your gateway to authentic cultural experiences in India
VITE_APP_URL=https://roammate.app

# API Configuration
VITE_API_BASE_URL=https://api.roammate.app/v1
VITE_USE_MOCK_API=true

# Authentication
VITE_AUTH_COOKIE_NAME=roammate_auth
VITE_AUTH_TOKEN_EXPIRY=7 # days

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_MAINTENANCE_MODE=false

# Third-party Services
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
VITE_GOOGLE_ANALYTICS_ID=your_ga_id_here

# Deployment
VITE_DEPLOY_ENV=development # development, staging, production
